# Detect C and C++ compiler options
# if not gcc, default to clang-7

COMPILER=$(notdir $(CC))
ifeq ($(COMPILER), gcc)
        USE_GCC = true
endif

ifeq ($(USE_GCC),)
        CC = clang-7
        COMPILER=clang
endif

CFLAGS=$(shell pkg-config oehost-$(COMPILER) --cflags)
LDFLAGS=$(shell pkg-config oehost-$(COMPILER) --libs)

build:
	@ echo "Compilers used: $(CC), $(CXX)"
	oeedger8r ../<EDL>.edl --untrusted
	$(CC) -g -c $(CFLAGS) <PROGRAM>.c
	$(CC) -g -c $(CFLAGS) <EDL>_u.c
	$(CC) -o <PROGRAM>host <EDL>_u.o <UNTRUSTED_LIB>.o <PROGRAM>.o $(LDFLAGS)

clean:
	rm -f <PROGRAM>host <PROGRAM>.o <EDL>_u.o <EDL>_u.c <EDL>_u.h <EDL>_args.h
